<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quizbg"
    android:layout_alignParentBottom="true"
    tools:context=".ui.login.redempsignupActivity">

    <ScrollView

        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:stretchColumns="1" >

            <TableRow android:gravity="center">
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            </TableRow>

            <TableRow android:gravity="center">
            <EditText
                android:id="@+id/phone"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:ems="10"
                android:paddingLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mobilebg"
                android:maxLength="10"
                android:maxLines="1"
                android:inputType="phone" />
            </TableRow>

            <TableRow android:gravity="center">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Name"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/white" />
            </TableRow>

            <TableRow android:gravity="center">
            <EditText
                android:id="@+id/name"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:ems="10"
                android:paddingLeft="30dp"
                android:background="@drawable/name"
                android:inputType="textPersonName" />
            </TableRow>

            <TableRow android:gravity="center">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="Father's Name"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/white" />
            </TableRow>

            <TableRow android:gravity="center">
            <EditText
                android:id="@+id/fatherName"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:ems="10"
                android:paddingLeft="30dp"
                android:background="@drawable/name"
                android:inputType="textPersonName"/>
            </TableRow>

            <TableRow android:gravity="center">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="Village Name"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/white" />
            </TableRow>

            <TableRow android:gravity="center">
            <EditText
                android:id="@+id/village"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:ems="10"
                android:paddingLeft="30dp"
                android:background="@drawable/location"
                android:inputType="textPostalAddress" />
            </TableRow>

            <TableRow android:gravity="center">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="Post Office"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/white"/>
            </TableRow>

            <TableRow android:gravity="center">
            <EditText
                android:id="@+id/postOffice"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:ems="10"
                android:paddingLeft="30dp"
                android:background="@drawable/postlocation"
                android:inputType="textPostalAddress" />
            </TableRow>

            <TableRow android:gravity="center">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="Kisan Sahayak Code"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/white" />
            </TableRow>

            <TableRow android:gravity="center">
            <EditText
                android:id="@+id/ksc"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:ems="10"
                android:paddingLeft="30dp"
                android:maxLength="4"
                android:maxLines="1"
                android:background="@drawable/passwaord"
                android:inputType="textPassword" />
            </TableRow>

            <TableRow android:gravity="center">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    android:background="#32B177"
                    android:text="Signup"
                    android:textColor="#FFFFFF" />
            </TableRow>


        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>